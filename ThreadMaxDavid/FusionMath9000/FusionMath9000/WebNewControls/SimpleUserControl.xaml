<UserControl x:Class="WebNewControls.SimpleUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WebNewControls"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition />
        </Grid.RowDefinitions>
        <Button Name="BtnFillList" Content="Remplir la liste" Grid.Row="0"
                HorizontalAlignment="Center" VerticalAlignment="Center"
                Click="BtnFillList_Click" Height="20"  />
        <ListBox Name="LstResult" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Row="1"   />
    </Grid>
</UserControl>
